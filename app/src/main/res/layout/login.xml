<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login"
        style="@style/AppTitle"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/default_side_margin"
        android:layout_marginRight="@dimen/default_side_margin"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/default_card_radius"
            app:cardElevation="0dp">    
            
        <EditText
            android:id="@+id/edtTxt_login_mobilePhone"
            android:singleLine="true"
			android:padding="@dimen/default_margin"
            android:hint="@string/mobile_phone"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:autofillHints="phone"
            android:inputType="phone" />
        
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/default_margin" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="@dimen/default_card_radius"
            app:cardElevation="0dp">    
            
        <EditText
            android:id="@+id/edtTxt_login_password"
            android:singleLine="true"
			android:padding="@dimen/default_margin"
            android:hint="@string/password"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height"
            android:autofillHints="password" />
        
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent"
            app:cardCornerRadius="@dimen/default_card_radius"
            app:cardElevation="0dp">

            <Button   
                android:foreground="?android:attr/selectableItemBackground"
                android:id="@+id/btn_login_loginButton"
                android:textColor="@android:color/white"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_height"
                android:text="@string/login"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</LinearLayout>
