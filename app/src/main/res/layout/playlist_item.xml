<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:layout_marginStart="@dimen/default_side_margin"
	android:layout_width="@dimen/playlist_album_size"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		app:cardCornerRadius="@dimen/default_card_radius"
		app:cardElevation="0dp"
		android:layout_width="@dimen/playlist_album_size"
		android:layout_height="@dimen/playlist_album_size">

		<ImageView
			android:foreground="?android:attr/selectableItemBackground"
			android:scaleType="centerCrop"
			android:id="@+id/song_list_item_cover_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:contentDescription="@string/cd_cover" />

	</androidx.cardview.widget.CardView>

	<TextView
        android:lines="2"
        android:maxLines="2"
        android:ellipsize="end"
		android:layout_marginTop="@dimen/default_text_margin_small"
		android:textSize="12sp"
		android:id="@+id/song_list_item_title"
		android:textColor="@android:color/black"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

</LinearLayout>
